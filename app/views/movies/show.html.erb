<%= link_to 'Back', movies_path %>

<div style="margin-left: 0 auto">

<h1><%= @movie.title %></h1>
  <p><b>Genre</b>: <%= @movie.genre %></p>
  <p><b>Year</b>: <%= @movie.year %></p>
  <p><b>Actors</b>: <%= @movie.actors %></p>
  <p><b>Director</b>: <%= @movie.director %>

</div>

<%= link_to 'Write A Review', new_review_path %>

<% @movie.reviews.each do |review| %>
  <%= review.body %>
  <%= link_to 'Edit', edit_review_path(review) %>
  <%= link_to 'Delete', destroy_review_path(review) %>
  <%= link_to 'Write A Comment', new_comment_path %>
  <% @movie.comments.each do |comment| %>
    <%= comment.body %>
    <%= link_to 'Edit', edit_comment_path(comment) %>
    <%= link_to 'Delete', destroy_comment_path(comment) %>
  <% end %>
<% end %>

