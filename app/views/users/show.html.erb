<div class="user-show">
  <div class="user-show-text">
    <h1><%= @user.username %></h1>
     <h2>Is a wonderful Crabby Movie Reviewer!! </h2>
     <p>  Need to reach them? </p>
          <%= @user.username %>'s email address is: <%= @user.email %>
     </p>


      <% if user_signed_in? && current_user.super_user? && !@user.super_user? %>
        <b><p style="font-size: 26px"><%= link_to "Make Super User", user_path(@user),
              method: :patch,
              data: { confirm: 'Are you sure?' } %></p></b>
      <% end %>

    </div>
</div>
